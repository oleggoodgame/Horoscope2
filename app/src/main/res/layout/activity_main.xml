<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main"
    tools:context=".MainActivity">

    <ExpandableListView
        android:id="@+id/lists"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:childDivider="@color/main"
        android:divider="@color/main"
        android:dividerHeight="5dp"
        android:padding="20dp"
        android:layout_marginBottom="70dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/rgbButton"/>

    <Button
        android:id="@+id/rgbButton"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:background="@drawable/rgb_button"
        android:onClick="RequestClick"
        android:padding="16dp"
        android:text="Request"
        android:textColor="#E0E0E0"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lists" />


</androidx.constraintlayout.widget.ConstraintLayout>

